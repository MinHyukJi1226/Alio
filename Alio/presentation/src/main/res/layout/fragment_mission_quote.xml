<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.MissionQuoteFragment">

        <TextView
            android:id="@+id/alarm_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/alarm_mission"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alarm_quote_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="유명한 명언을 \n따라 써보세요!"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/alarm_quote"
            app:layout_constraintTop_toBottomOf="@id/alarm_quote" />

        <TextView
            android:id="@+id/alarm_quote_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/alarm_quote_title"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="나 자신을 알라"
            android:textSize="18sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="200dp"/>

        <TextView
            android:id="@+id/alarm_quote_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/alarm_quote_text"
            app:layout_constraintStart_toStartOf="@id/alarm_quote_text"
            android:textColor="@color/gray"
            android:textSize="12sp"
            tools:text="-소크라테스-" />

        <EditText
            android:id="@+id/alarm_quote_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="50dp"
            tools:hint="나 자신을 알라"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/alarm_quote_people"/>

        <Button
            android:id="@+id/alarm_quote_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>