<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.MissionPictureFragment">

        <TextView
            android:id="@+id/alarm_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/alarm_mission"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alarm_todo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="의미있는 사진을 \n찍어보세요!"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/alarm_todo"
            app:layout_constraintTop_toBottomOf="@id/alarm_todo" />

        <ImageView
            android:id="@+id/alarm_picture_img"
            android:layout_width="245dp"
            android:layout_height="143dp"
            android:layout_marginTop="96dp"
            tools:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alarm_todo_title" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/background_button_circle"
            android:padding="25dp"
            android:src="@drawable/ic_camera"
            app:layout_constraintEnd_toEndOf="@id/alarm_picture_img"
            app:layout_constraintStart_toStartOf="@id/alarm_picture_img"
            app:layout_constraintTop_toBottomOf="@id/alarm_picture_img" />

        <Button
            android:id="@+id/alarm_picture_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
